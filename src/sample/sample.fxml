<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="387.0" prefWidth="710.0" VBox.vgrow="ALWAYS">
         <children>
            <TabPane prefHeight="375.0" prefWidth="710.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                  <Tab text="Все процессы">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="379.0" prefWidth="710.0">
                           <children>
                              <TableView fx:id="tableProcesses" prefHeight="347.0" prefWidth="710.0">
                                <columns>
                                  <TableColumn fx:id="idColumn" prefWidth="37.0" text="ID" />
                                  <TableColumn fx:id="nameColumn" prefWidth="104.0" text="Имя процесса" />
                                    <TableColumn fx:id="timeOfTactsColumn" prefWidth="127.0" text="Интервал в тактах" />
                                    <TableColumn fx:id="timeInColumn" prefWidth="95.0" text="Время входа" />
                                    <TableColumn fx:id="timeColumn" prefWidth="105.0" text="До завершения" />
                                    <TableColumn fx:id="stateColumn" prefWidth="90.0" text="Состояние" />
                                    <TableColumn fx:id="priorityColumn" prefWidth="81.0" text="Приоритет" />
                                    <TableColumn fx:id="sizeColumn" prefWidth="70.0" text="Размер" />
                                </columns>
                                 <contextMenu>
                                    <ContextMenu>
                                      <items>
                                        <MenuItem mnemonicParsing="false" onAction="#changePriority" text="Изменение приоритета" />
                                      </items>
                                    </ContextMenu>
                                 </contextMenu>
                              </TableView>
                           </children>
                        </AnchorPane>
                    </content>
                  </Tab>
                <Tab text="Подтверждённые">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="137.0" prefWidth="710.0">
                           <children>
                              <TableView fx:id="tableConfirmedProcesses" prefHeight="347.0" prefWidth="710.0">
                                <columns>
                                    <TableColumn fx:id="idConfirmedColumn" prefWidth="59.0" text="ID" />
                                    <TableColumn fx:id="nameConfirmedColumn" prefWidth="142.0" text="Имя процесса" />
                                    <TableColumn fx:id="timeOfTactsConfirmedColumn" prefWidth="130.0" text="Интервал в тактах" />
                                    <TableColumn fx:id="timeInConfirmedColumn" prefWidth="97.0" text="Время входа" />
                                    <TableColumn fx:id="stateConfirmedColumn" prefWidth="100.0" text="Состояние" />
                                    <TableColumn fx:id="priorityConfirmedColumn" minWidth="0.0" prefWidth="86.0" text="Приоритет" />
                                    <TableColumn fx:id="sizeConfirmedColumn" prefWidth="95.0" text="Размер" />
                                </columns>
                              </TableView>
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
                <Tab text="Отклонённые">
                  <content>
                    <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="0.0" minWidth="0.0" prefHeight="346.0" prefWidth="710.0">
                           <children>
                              <TableView fx:id="tableRejectedProcesses" prefHeight="347.0" prefWidth="710.0">
                                 <columns>
                                    <TableColumn fx:id="idRejectedColumn" prefWidth="104.0" text="ID" />
                                    <TableColumn fx:id="nameRejectedColumn" prefWidth="240.0" text="Имя процесса" />
                                    <TableColumn fx:id="stateRejectedColumn" prefWidth="253.0" text="Состояние" />
                                    <TableColumn fx:id="sizeRejectedColumn" prefWidth="112.0" text="Размер" />
                                 </columns>
                              </TableView>
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
                  <Tab fx:id="tabMemory" text="Память">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="468.0" prefWidth="710.0">
                           <children>
                              <TableView fx:id="tableMemoryBlocks" prefHeight="288.0" prefWidth="204.0">
                                <columns>
                                    <TableColumn fx:id="startMemoryBlockColumn" prefWidth="106.0" text="Начало" />
                                    <TableColumn fx:id="endMemoryBlockColumn" prefWidth="97.0" text="Конец" />
                                </columns>
                              </TableView>
                              <ProgressBar fx:id="progressBarMemory" layoutX="10.0" layoutY="314.0" opacity="0.83" prefHeight="25.0" prefWidth="689.0" progress="0.72" />
                           </children>
                        </AnchorPane>
                    </content>
                  </Tab>
                  <Tab text="Статистика">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="373.0" prefWidth="710.0">
                           <children>
                              <ChoiceBox fx:id="choiceSpeed" layoutX="385.0" layoutY="55.0" prefWidth="150.0" />
                              <Label layoutX="142.0" layoutY="55.0" text="Скорость работы процессов:">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <Label layoutX="142.0" layoutY="90.0" text="Количество процессов: ">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtQuantityProcesses" editable="false" layoutX="385.0" layoutY="90.0" text="0" />
                              <Label layoutX="142.0" layoutY="126.0" text="Количество отклонённых: ">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtQuantityRejectedProcesses" editable="false" layoutX="385.0" layoutY="124.0" text="0" />
                              <Label layoutX="142.0" layoutY="159.0" text="Количество принятых: ">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtQuantityConfirmedProcesses" editable="false" layoutX="385.0" layoutY="158.0" text="0" />
                              <Label layoutX="141.0" layoutY="192.0" text="Количество завершённых: ">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtQuantityTerminatedProcesses" editable="false" layoutX="384.0" layoutY="192.0" text="0" />
                              <Label layoutX="142.0" layoutY="261.0" text="Количество заполненой памяти: ">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtMemory" editable="false" layoutX="385.0" layoutY="262.0" text="0" />
                              <Label layoutX="142.0" layoutY="227.0" text="Количество в ожидании: ">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtQuantityInPending" editable="false" layoutX="385.0" layoutY="227.0" text="0" />
                           </children>
                        </AnchorPane>
                    </content>
                  </Tab>
              </tabs>
            </TabPane>
         </children>
    </AnchorPane>
  </children>
</VBox>
